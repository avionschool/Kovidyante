<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>   
<% end %>   

<h1>Homework List</h1>

<hr>
      <% @homeworks.each do |homework| %>    
            <p><%= homework.name %></p>   
            <button><%= link_to "Show", homework.attachment_url %></button>   
            <button><%= link_to "Answers", homework_path(homework) %></button>
            <% if current_user.role == 'teacher' %>
               <button><%= link_to "Delete",  homework, method: :delete, confirm: "Are you sure you want to delete #{homework.name}?" %></button>   
            <% end %>         
      <% end %>   
<hr>

<% if current_user.role == 'teacher' %>
   <button><%= link_to "New Homework", new_homework_path %></button>
<% end %>
